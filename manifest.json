{
    "manifest_version": 3,
    "name": "Nice Time to Meet",
    "version": "1.0",
    "description": "Adds more than just two timezones to Google Calender",
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "icons": {
        "48": "/icons/icon48.png",
        "128": "/icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://calendar.google.com/calendar/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "permissions": [
        "storage"
    ]
}
